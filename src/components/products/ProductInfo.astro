---
export interface Props {
  categoryName: string;
  name: string;
  price: string;
}

const { categoryName, name, price } = Astro.props;
---

<div>
  <div class="mb-4">
    <span class="inline-block bg-pink-100 text-pink-800 text-sm px-3 py-1 rounded-full font-medium">
      {categoryName}
    </span>
  </div>
  
  <h1 class="text-4xl font-bold text-gray-900 mb-4">{name}</h1>
  
  <div class="text-3xl font-bold text-pink-600 mb-6">{price}</div>
  
  <div class="text-lg text-gray-700 mb-8 leading-relaxed prose prose-lg max-w-none">
    <slot />
  </div>
</div>