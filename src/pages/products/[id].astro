---
import Layout from '../../layouts/Layout.astro';
import PhotoGallery from '../../components/PhotoGallery.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map(product => ({
    params: { id: product.slug },
    props: { product }
  }));
}

const { id } = Astro.params;
const { product } = Astro.props;

if (!product) {
  return Astro.redirect('/products');
}
---

<Layout title={product.data.name}>
  <!-- Breadcrumb Navigation -->
  <section class="bg-gray-50 py-4">
    <div class="container mx-auto px-4">
      <nav class="text-sm text-gray-600">
        <a href="/" class="hover:text-pink-600">Home</a>
        <span class="mx-2">/</span>
        <a href="/products" class="hover:text-pink-600">Products</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">{product.data.name}</span>
      </nav>
    </div>
  </section>

  <!-- Product Detail Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Photo Gallery -->
          <div>
            <PhotoGallery photos={product.data.photos} productName={product.data.name} />
          </div>
          
          <!-- Product Information -->
          <div>
            <div class="mb-4">
              <span class="inline-block bg-pink-100 text-pink-800 text-sm px-3 py-1 rounded-full font-medium">
                {product.data.category}
              </span>
            </div>
            
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{product.data.name}</h1>
            
            <div class="text-3xl font-bold text-pink-600 mb-6">{product.data.price}</div>
            
            <p class="text-lg text-gray-700 mb-8 leading-relaxed">
              {product.body}
            </p>
            
            <!-- Features List -->
            <div class="mb-8">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">Features & Benefits</h3>
              <ul class="space-y-3">
                {product.data.features.map((feature) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-pink-600 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href="/contact" 
                class="btn-primary text-center flex-1"
              >
                Request Quote
              </a>
              <button 
                class="btn-secondary text-center flex-1"
                onclick="window.history.back()"
              >
                Back to Products
              </button>
            </div>
            
            <!-- Additional Info -->
            <div class="mt-8 p-6 bg-gray-50 rounded-lg">
              <h4 class="font-semibold text-gray-900 mb-2">Need Something Custom?</h4>
              <p class="text-gray-600 text-sm">
                We specialize in custom designs and modifications. Contact us to discuss your specific requirements and get a personalized quote.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Products Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">More in {product.data.category}</h2>
        <div class="grid md:grid-cols-3 gap-6">
          {(await getCollection('products'))
            .filter(p => p.data.category === product.data.category && p.slug !== product.slug)
            .slice(0, 3)
            .map((relatedProduct) => (
              <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden">
                <div class="h-48 bg-gradient-to-br from-pink-100 to-purple-100 flex items-center justify-center">
                  <svg class="w-16 h-16 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                  </svg>
                </div>
                <div class="p-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">{relatedProduct.data.name}</h3>
                  <p class="text-sm text-gray-600 mb-4">{relatedProduct.data.shortDescription}</p>
                  <div class="flex items-center justify-between">
                    <span class="text-xl font-bold text-pink-600">{relatedProduct.data.price}</span>
                    <a 
                      href={`/products/${relatedProduct.slug}`}
                      class="bg-pink-600 text-white px-4 py-2 rounded-full text-sm hover:bg-pink-700 transition-colors"
                    >
                      View Details
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</Layout>