---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import { getAllProducts, type Product } from '../data/products.ts';

const allProducts = getAllProducts();

const categories = [
  {
    name: "Cake Toppers",
    description: "Personalized toppers for every occasion",
    products: allProducts.filter(p => p.category === "Cake Toppers")
  },
  {
    name: "Cupcake Stands", 
    description: "Display your treats in style",
    products: allProducts.filter(p => p.category === "Cupcake Stands")
  },
  {
    name: "Custom Designs",
    description: "Your imagination, our expertise", 
    products: allProducts.filter(p => p.category === "Custom Designs")
  }
];
---

<Layout title="Products">
  <section class="py-16 bg-gradient-to-br from-pink-50 to-purple-50">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-center text-gray-900 mb-4">Our Products</h1>
      <p class="text-xl text-center text-gray-700 max-w-3xl mx-auto">
        Explore our range of laser-cut and engraved products designed specifically for bakers and cake decorators
      </p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      {categories.map((category, index) => (
        <div class="mb-16" key={category.name}>
          <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl font-bold text-gray-900 mb-3">{category.name}</h2>
            <p class="text-gray-600 mb-8">{category.description}</p>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 items-stretch">
              {category.products.map((product) => (
                <ProductCard product={product} categoryIndex={index} key={product.name} />
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Need Something Special?</h2>
        <p class="text-lg text-gray-700 mb-8">
          We love bringing unique ideas to life. If you have a custom design in mind, let's talk about making it a reality.
        </p>
        <a href="/contact" class="bg-pink-600 text-white px-8 py-3 rounded-full hover:bg-pink-700 transition-colors font-semibold inline-block">
          Request Custom Quote
        </a>
      </div>
    </div>
  </section>
</Layout>